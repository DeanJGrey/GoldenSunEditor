<Window
    x:Class="GoldenSunEditor.WindowStart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:GoldenSunEditor"
    mc:Ignorable="d"
    Title="WindowStart"
    Width="450"
    Height="300"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="#7F000000" 
    MouseDown="WindowDrag" 
    Loaded="WindowLoad">


    <Border
        BorderThickness="0"
        Background="#33000000">

        <Canvas 
            x:Name="canvas1" 
            Margin="0,0,0,0">

            <Label 
                Content="Load ROM" 
                Canvas.Left="25" 
                Canvas.Top="23" 
                Foreground="White" 
                FontFamily="Century Gothic" 
                FontSize="36"/>

            <local:XAMLTester 
                Height="77" 
                Width="157" 
                Canvas.Left="149" 
                Canvas.Top="138">
            </local:XAMLTester>
        </Canvas>
    </Border>
</Window>